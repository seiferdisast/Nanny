<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nanny" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EE0030</item> <!--color banner-->
        <item name="colorPrimaryVariant">@color/purple_700</item> <!--color de fondo para botones-->
        <item name="colorOnPrimary">@color/white</item> <!--color de letra sobre un fondo-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="prettyTittleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/annie_use_your_telescope</item>
    </style>

    <style name="prettySubText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/annie_use_your_telescope</item>
    </style>

    <style name="prettyLabelText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/annie_use_your_telescope</item>
    </style>
    
    <style name="splashapplogo" parent="Theme.Nanny">
        <item name="android:windowBackground">@drawable/splach</item>
    </style>

</resources>